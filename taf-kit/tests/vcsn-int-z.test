. ./defs || exit 1

set -e

VCSN=vcsn-int-z

$VCSN identity $int_z

# Make sure dot understands the output.
$VCSN dot-dump $int_z | dot

test `$VCSN eval $int_z "10#11"` = 3

test `$VCSN eval $int_z "10#12"` = 0

test `$VCSN eval $int_z "11"` = 6

$VCSN eval $int_z "1" 2> stderr && exit 1
grep 'Cannot parse' stderr

sed '/^#/d' <<EOF | $VCSN --alphabet 32,33,34 edit-automaton 33.xml
# Add states
1
# Add one state
2
# Set a state to be initial.
5
# Which state
0
# Set a state to be final.
7
# Which state
1
# Add transition
3
# From and to
0
1
# Label
{5} 32
# Add transition
3
# From and to
1
0
# Label
33 {7}
# Exit.
10
EOF

fail1 $VCSN is-complete 33.xml
$VCSN complete 33.xml \| is-complete -

$VCSN --alphabet=33,34,35 thompson '(33 {2}* + 35).34' \| quotient -

$VCSN --alphabet=33,34,35 standard '(33 {2}* + 35).34' > m.xml

$VCSN complete m.xml \| transpose - > mt.xml
$VCSN trim mt.xml > mtt.xml

mtt=`$VCSN aut-to-exp mtt.xml`
mt=`$VCSN aut-to-exp mt.xml`
$VCSN --alphabet=33,34,35 standard "$mt"
$VCSN --alphabet=33,34,35 standard "$mtt"

$VCSN --alphabet=33,34,35 standard  '(33* + 35).34+(33*+35)' \| quotient -
