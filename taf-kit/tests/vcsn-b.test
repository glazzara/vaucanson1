set -ex

## -------------- ##
## Input/output.  ##
## -------------- ##

## --------------------- ##
## Test and evaluation.  ##
## --------------------- ##

# are-isomorphic
  vcsn-b are-isomorphic $a1 $a1
! vcsn-b are-isomorphic $a1 $b1

# eval
test "$(vcsn-b eval $a1 'a')" = 0
test "$(vcsn-b eval $a1 'ab')" = 1
test "$(vcsn-b eval $a1 'aaaabbb')" = 1

# is-ambiguous
! vcsn-b is-ambiguous $non_ambiguous1
! vcsn-b is-ambiguous $non_ambiguous2
  vcsn-b is-ambiguous $ambiguous

# is-complete
! vcsn-b is-complete $a1
  vcsn-b complete $a1 | vcsn-b is-complete -

# is-deterministic
! vcsn-b is-deterministic $a1
  vcsn-b determinize $a1 | vcsn-b is-deterministic -

# is-empty.
! vcsn-b is-empty $a1

# is-normalized.
#! vcsn-b is-normalized $a1
#  vcsn-b normalize $a1 | vcsn-b is-normalized -

# is-realtime.
! vcsn-b is-realtime $a1

# is-standard
#! vcsn-b is-standard $a1
#  vcsn-b standardize $a1 | vcsn-b is-standard -


