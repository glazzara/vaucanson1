. ./defs || exit 1

set -e

## ------------------------------------ ##
## Input/output work with transducers.  ##
## ------------------------------------ ##

vcsn-tdc dot-dump $t1
vcsn-tdc info $t1


## ------------------------------------- ##
## Tests and evaluation on transducers.  ##
## ------------------------------------- ##

#FIXME: Disable are-isomorphic test
# as long as this algorithm is not correctly
# defined.
#  vcsn-tdc are-isomorphic $t1 $t1
      vcsn-tdc is-sub-normalized $t1
fail1 vcsn-tdc is-empty $t1



## ------------------------------------ ##
## Generic algorithms for transducers.  ##
## ------------------------------------ ##


## Composition test on boolean transducers
  vcsn-tdc compose $t1 $u1 > tmp1.xml
#FIXME: Disable xml diff
#  diff tmp1.xml $t1_compose_u1

  vcsn-tdc u_compose $t1 $u1 > tmp2.xml

#FIXME: Disable are-isomorphic test
# as long as this algorithm is not correctly
# defined.
# fail1 vcsn-tdc are-isomorphic tmp1.xml tmp2.xml

## Unambiguous composition test on boolean transducers
  vcsn-tdc u_compose $t2 \
                     $u2 > tmp.xml

#FIXME: Disable xml diff
# diff tmp.xml $t2_ucompose_u2

#FIXME: Disable are-isomorphic test
# as long as this algorithm is not correctly
# defined.
## Inversion of t1
#  vcsn-tdc invert $t1 \| are-isomorphic $inverted_t1 -

  input=`vcsn-tdc --alphabet1=ab --alphabet2=xy eval $t1 abba`
  vcsn-tdc --alphabet1=ab --alphabet2=xy domain $t1 | vcsn-b eval - abba
  vcsn-tdc --alphabet1=ab --alphabet2=xy image $t1 | vcsn-b eval - $input

  vcsn-tdc to-rt $t1

  vcsn-tdc --alphabet1=ab --alphabet2=xy eval-aut $t1 $a1 | vcsn-b eval - yx
