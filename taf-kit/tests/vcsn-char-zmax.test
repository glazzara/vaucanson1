$VCSN --parser='ONE=I ZERO=O ALPHABET=01' eval oi.xml '01' > out
test `cat out` = 8
$VCSN --parser='ONE=I ZERO=O ALPHABET=01' standard '(I+O).1.(I+0)+O'


