<automaton xmlns="http://vaucanson.lrde.epita.fr">
  <labelType>
    <monoid generatorType="letters" type="free">
      <generator value="a"/>
      <generator value="b"/>
    </monoid>
    <semiring operations="maxPlus" set="Z"/>
  </labelType>
  <content>
    <states>
      <state name="s0"/>
      <state name="s1"/>
      <state name="s2"/>
    </states>
    <transitions>
      <transition src="s0" dst="s1" label="a"/>
      <transition src="s1" dst="s2" label="b"/>
      <initial label="1" state="s0"/>
      <final label="1" state="s1"/>
    </transitions>
  </content>
</automaton>
