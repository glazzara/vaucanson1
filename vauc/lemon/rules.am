LEMON = $(top_builddir)/lemon/lemon
LEMONCOMPILE = $(LEMON) -l 

SUFFIXES = .lemon


.lemon.cc:
	$(LEMONCOMPILE) `test -f '$<' || echo '$(srcdir)/'`$< || \
	   (rm -f $*.c $*.h && /bin/false)
	cat $*.c | sed -e 's,$*.c,$@,g' > $@
	rm -f $*.c

